# Monitoring Environment Variables
# Copy this file to .env.monitoring and update the passwords

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here
GRAFANA_SECRET_KEY=your_grafana_secret_key_min_32_chars_here

# Prometheus Configuration  
PROMETHEUS_ADMIN_PASSWORD=your_secure_prometheus_password_here
PROMETHEUS_WEB_EXTERNAL_URL=http://localhost:9090
PROMETHEUS_RETENTION_TIME=7d

# Loki Configuration
LOKI_AUTH_ENABLED=false

# Monitoring Basic Auth (optional)
MONITORING_BASIC_AUTH_USER=monitoring
MONITORING_BASIC_AUTH_PASSWORD=your_secure_monitoring_password_here

# Network Configuration
MONITORING_NETWORK=loop-it_loop-it-network

# Storage Configuration
PROMETHEUS_STORAGE_SIZE=10Gi
GRAFANA_STORAGE_SIZE=2Gi
LOKI_STORAGE_SIZE=5Gi

# Security Settings
ENABLE_GRAFANA_ANONYMOUS=false
ENABLE_BASIC_AUTH=false
SSL_REDIRECT=false