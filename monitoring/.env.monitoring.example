# Monitoring Environment Variables Example
# Copy this file to .env.monitoring and update the values

# Grafana Configuration
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password
GRAFANA_SECRET_KEY=your_grafana_secret_key_min_32_chars
GRAFANA_ADMIN_USER=admin

# Prometheus Configuration
PROMETHEUS_ADMIN_PASSWORD=your_secure_prometheus_password
PROMETHEUS_WEB_EXTERNAL_URL=http://localhost:9090
PROMETHEUS_RETENTION_TIME=7d

# Loki Configuration
LOKI_AUTH_ENABLED=false

# Network Configuration
MONITORING_NETWORK=loop-it_loop-it-network