# terraform.tfvars - Complete Configuration
# Basic Configuration
project_name     = "loop-it"
environment      = "production"
aws_region       = "eu-central-1"
cluster_name     = "loop-it-cluster"

# Node Configuration
node_instance_types   = ["t3.small"]
node_desired_capacity = 1
node_max_capacity     = 3
node_min_capacity     = 1
enable_spot_instances = false

# App Configuration
deploy_applications   = true
backend_replicas      = 1
frontend_replicas     = 1
postgres_storage_size = "2Gi"

# SSL Configuration
domain_name        = "loopit.tech"
ssl_email         = "vpj97@outlook.de"
public_ingress    = true
cert_manager_email = "vpj97@outlook.de"

# Monitoring Configuration
enable_monitoring = true
enable_ssl = false
enable_monitoring = false
